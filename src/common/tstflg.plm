testFlag: DO;
$include(:f3:tstflg.ipx)

testFlag: PROCEDURE(base, flag) BYTE PUBLIC;
	DECLARE base ADDRESS, flag BYTE;
	DECLARE b BASED base(1) BYTE;
	DECLARE off BYTE, bit BYTE;

	off = tblOffsets(flag);
	bit = tblBitFlags(flag);
	if (b(off) and bit) <> 0 then
		return TRUE;
	else
		return FALSE;
end testFlag;

END;
