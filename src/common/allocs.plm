allocs: DO;
declare lit literally 'literally';
$include(:f3:err.inc)
$include(:f3:ftlerr.pex)

declare	botSymbol address external,
	topInfo address external;

allocSymbol: PROCEDURE(spc) ADDRESS PUBLIC;
	DECLARE spc ADDRESS;
	DECLARE tmp ADDRESS;

	if (tmp := botSymbol - spc) < topInfo then
		call fatalError(ERR83);
	return (botSymbol := tmp);
end allocSymbol;

end;
