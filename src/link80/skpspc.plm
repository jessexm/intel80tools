skpspc:
DO;

skipSpc: PROCEDURE(pch) ADDRESS PUBLIC;
	DECLARE pch ADDRESS;
	DECLARE ch BASED pch BYTE;

	DO WHILE ch = ' ';
		pch = pch + 1;
	END;
	RETURN pch;
END skipSpc;

END;
