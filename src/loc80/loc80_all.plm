DECLARE	loHiBoth BYTE PUBLIC,
	outSegType BYTE PUBLIC,
	unused(2) BYTE,
	curColumn ADDRESS PUBLIC,
	workingSegBase ADDRESS PUBLIC,
	unsatisfiedCnt ADDRESS PUBLIC INITIAL(0),
	curcol BYTE PUBLIC INITIAL(0),
