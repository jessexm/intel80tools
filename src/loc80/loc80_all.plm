toupper: PROCEDURE(ch) BYTE PUBLIC;
	DECLARE ch BYTE;
	IF ch < 'a' THEN
		RETURN ch;
	IF ch > 'z' THEN
		RETURN ch;
	RETURN ch AND 0DFH;
END toupper;

